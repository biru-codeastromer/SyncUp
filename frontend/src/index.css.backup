/* Tailwind CSS */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: #0f0f1e;
  min-height: 100vh;
  line-height: 1.6;
  color: #e8eaed;
  overflow-x: hidden;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
    monospace;
}

/* Container Styles */
.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  background: #0f0f1e;
  position: relative;
  overflow: hidden;
}

.auth-container::before {
  content: '';
  position: absolute;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
  top: -250px;
  right: -250px;
  border-radius: 50%;
  filter: blur(80px);
}

.auth-container::after {
  content: '';
  position: absolute;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.12) 0%, transparent 70%);
  bottom: -200px;
  left: -200px;
  border-radius: 50%;
  filter: blur(80px);
}

.auth-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.03) 0%, transparent 50%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(1deg);
  }
}

/* Card Styles */
.auth-card {
  background: rgba(30, 31, 41, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24px;
  box-shadow: 
    0 20px 25px -5px rgba(0, 0, 0, 0.3),
    0 10px 10px -5px rgba(0, 0, 0, 0.2),
    0 0 0 1px rgba(58, 141, 255, 0.2);
  padding: 40px;
  width: 100%;
  max-width: 800px;
  position: relative;
  z-index: 1;
  animation: slideUp 0.6s ease-out;
  border: 1px solid rgba(58, 141, 255, 0.3);
  display: flex;
  flex-direction: column;
  max-height: 90vh;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header Styles */
.auth-header {
  text-align: center;
  margin-bottom: 32px;
}

.auth-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12px;
  background: linear-gradient(135deg, #3a8dff 0%, #6fe7ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  letter-spacing: -0.025em;
}

.auth-subtitle {
  color: #b0c4de;
  font-size: 1.1rem;
  font-weight: 400;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

/* Form Styles */
.auth-form {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  align-items: start;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-weight: 600;
  color: #e2e8f0;
  font-size: 0.95rem;
  margin-bottom: 4px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.form-input {
  padding: 14px 16px;
  border: 1.5px solid rgba(58, 141, 255, 0.3);
  border-radius: 12px;
  font-size: 1rem;
  transition: all 0.2s ease;
  background: rgba(30, 31, 41, 0.8);
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.form-input:focus {
  outline: none;
  border-color: #3a8dff;
  box-shadow: 
    0 0 0 3px rgba(58, 141, 255, 0.2),
    0 1px 3px 0 rgba(0, 0, 0, 0.3);
  transform: translateY(-1px);
  background: rgba(30, 31, 41, 0.95);
}

.form-input::placeholder {
  color: #94a3b8;
  font-weight: 400;
}

/* Grid Layout for Name Fields */
.name-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

/* Checkbox Styles */
.checkbox-group {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin: 8px 0;
  grid-column: 1 / -1;
}

.checkbox-input {
  width: 18px;
  height: 18px;
  accent-color: #3a8dff;
  margin-top: 2px;
}

.checkbox-label {
  font-size: 0.9rem;
  color: #b0c4de;
  line-height: 1.5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.checkbox-label a {
  color: #3a8dff;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.2s ease;
}

.checkbox-label a:hover {
  color: #6fe7ff;
}

/* Error Message Styles */
.error-message {
  color: #dc2626;
  font-size: 0.9rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  text-align: center;
  margin-bottom: 16px;
  padding: 12px 16px;
  border: 1px solid #fecaca;
  border-radius: 8px;
  background: #fef2f2;
  grid-column: 1 / -1;
  animation: errorSlide 0.3s ease-out;
}

@keyframes errorSlide {
  0% { opacity: 0; transform: translateY(-10px); }
  100% { opacity: 1; transform: translateY(0); }
}

/* Button Styles */
.auth-button {
  background: linear-gradient(135deg, #3a8dff 0%, #6fe7ff 100%);
  color: #1e1f29;
  border: none;
  padding: 14px 28px;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  margin-top: 16px;
  grid-column: 1 / -1;
  justify-self: center;
  width: 220px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  letter-spacing: 0.025em;
  box-shadow: 
    0 4px 14px 0 rgba(58, 141, 255, 0.4),
    0 1px 3px 0 rgba(0, 0, 0, 0.2);
}

.auth-button:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 8px 25px 0 rgba(58, 141, 255, 0.5),
    0 4px 6px -1px rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, #2563eb 0%, #06b6d4 100%);
}

.auth-button:active {
  transform: translateY(0px);
  box-shadow: 
    0 2px 10px 0 rgba(58, 141, 255, 0.3),
    0 1px 3px 0 rgba(0, 0, 0, 0.2);
}

/* Link Styles */
.auth-link {
  text-align: center;
  margin-top: 24px;
  padding-top: 20px;
  border-top: 1px solid rgba(58, 141, 255, 0.2);
  grid-column: 1 / -1;
}

.auth-link-text {
  color: #b0c4de;
  font-size: 0.95rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.auth-link-text a {
  color: #3a8dff;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.2s ease;
  position: relative;
}

.auth-link-text a::after {
  content: "";
  position: absolute;
  width: 0;
  height: 2px;
  bottom: -2px;
  left: 0;
  background: linear-gradient(135deg, #3a8dff, #6fe7ff);
  transition: width 0.2s ease;
}

.auth-link-text a:hover::after {
  width: 100%;
}

.auth-link-text a:hover {
  color: #6fe7ff;
}

/* Forgot Password Link */
.forgot-password {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 8px;
  text-align: center;
  grid-column: 1 / -1;
  width: 100%;
}

.forgot-password a {
  color: #3a8dff;
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 500;
  transition: all 0.2s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  position: relative;
}

.forgot-password a:hover {
  color: #6fe7ff;
  transform: translateY(-1px);
}

/* Remember Me Section */
.remember-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  grid-column: 1 / -1;
}

.remember-group {
  display: flex;
  align-items: center;
  gap: 8px;
}


/* Responsive Design */
@media (max-width: 768px) {
  .auth-container {
    padding: 15px;
  }

  .auth-card {
    padding: 25px 20px;
    border-radius: 15px;
    max-width: 100%;
  }

  .auth-title {
    font-size: 1.8rem;
  }

  .auth-form {
    grid-template-columns: 1fr;
    gap: 15px;
  }

  .name-grid {
    grid-template-columns: 1fr;
    gap: 15px;
  }

  .form-input {
    padding: 10px 14px;
  }

  .auth-button {
    padding: 12px 18px;
    width: 100%;
  }
}

@media (max-width: 480px) {
  .auth-card {
    padding: 25px 20px;
  }

  .auth-title {
    font-size: 1.8rem;
  }

  .form-input {
    padding: 10px 14px;
    font-size: 0.95rem;
  }
}

/* Loading Animation */
@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.loading {
  animation: pulse 1.5s ease-in-out infinite;
}

/* Success Animation */
@keyframes success {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.success {
  animation: success 0.6s ease-out;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #5a67d8, #6b46c1);
}

