}

/* Header Center - Search */
.header-center {
  flex: 1;
  max-width: 500px;
  margin: 0 24px;
}

.header-search {
  position: relative;
  width: 100%;
}

.search-icon {
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
