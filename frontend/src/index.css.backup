  text-decoration: none;
  transition: all 0.2s ease;
  cursor: pointer;
  border: none;
  background: none;
  width: 100%;
  text-align: left;
  font-size: 0.9rem;
  font-weight: 500;
}

.dropdown-item i {
  font-size: 1.2rem;
  color: #6b7280;
  transition: color 0.2s ease;
}

.dropdown-item:hover {
  background: #f3f4f6;
  color: #667eea;
}

.dropdown-item:hover i {
  color: #667eea;
}

.logout-item {
  color: #dc2626;
}

.logout-item i {
