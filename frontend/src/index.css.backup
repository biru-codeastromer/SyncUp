/* ========================================
   LAYOUT STYLES
   ======================================== */
.layout {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #0f0f1e;
  position: relative;
}

.layout::before {
  content: '';
  position: fixed;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.08) 0%, transparent 70%);
  top: -300px;
  right: -300px;
  border-radius: 50%;
  filter: blur(100px);
  pointer-events: none;
  z-index: 0;
}

.layout::after {
  content: '';
  position: fixed;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.06) 0%, transparent 70%);
  bottom: -250px;
  left: -250px;
  border-radius: 50%;
  filter: blur(100px);
  pointer-events: none;
  z-index: 0;
}

.main-content {
  flex: 1;
  padding: 0;
  position: relative;
  z-index: 1;
}

/* ========================================
   HEADER STYLES - ENHANCED
   ======================================== */
.header {
  background: rgba(15, 15, 30, 0.8);
  backdrop-filter: blur(20px) saturate(180%);
